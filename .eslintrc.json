{
  "env": {
    "node": true,
    "jest": true
  },
  "overrides": [
    {
      "files": ["*.test.cjs", "*.test.js"],
      "env": { "jest": true }
    }
  ],
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended"
  ],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": "error",
    "require-jsdoc": "off"
  },
  "ignorePatterns": [
    "frontend/",
    "node_modules/",
    "*.config.js",
    "*.config.mjs"
  ]
} 